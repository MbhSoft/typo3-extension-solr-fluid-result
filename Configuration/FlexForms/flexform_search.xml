			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:solr_fluid_result/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.querySetting>
						<TCEforms>
						<label>LLL:EXT:solr_fluid_result/Resources/Private/Language/locallang_be.xlf:flexforms_general.querySetting</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<itemsProcFunc>MbhSoftware\SolrFluidResult\Hooks\ItemsProcFunc->addQuerySettings</itemsProcFunc>
								<items>
									<numIndex index="0" type="array">
