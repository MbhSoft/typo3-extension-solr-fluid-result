							<config>
								<type>input</type>
								<eval>int+</eval>
							</config>
						</TCEforms>
					</settings.maximumResults>
					<settings.categoryFilterItem>
						<TCEforms>
							<exclude>1</exclude>
							<label>Category filter</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_solrfluidresult_domain_model_categoryfilteritem</allowed>
								<size>1</size>
								<minitems>1</minitems>
								<maxitems>1</maxitems>
								<required>1</required>
								<wizards>
									<_PADDING>0</_PADDING>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.categoryFilterItem>
